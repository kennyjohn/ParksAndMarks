<% include ../partials/header %>

<div class="container">
    <div class="row"></div>
        <h1 style="text-align: center">Submit a new park</h1>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/parks" method="POST">
                <div class="form-group">
                     <input class="form-control" type="text" name="name" placeholder="Park name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL (Optional)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Back to list of parks</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
