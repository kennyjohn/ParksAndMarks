<% include ../partials/header %>

<div class="container">
    <div class="row"></div>
        <div style="width: 30%; margin: 50px auto;">
            <p class="text-center"><strong>Add a comment to <%= park.name %>:</strong></p>
            <form action="/parks/<%= park._id %>/comments" method="POST">
                <div class="form-group">
                     <textarea class="form-control" rows="5" type="textarea" name="comment[text]" placeholder="Please tell us about your experience!"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Back to parks</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
