<% include ../partials/header %>

<div class="container">
    <div class="row"></div>
        <h1 style="text-align: center">Edit a comment</h1>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/parks/<%= pid %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                     <textarea class="form-control" rows="5" name="comment[text]" value="<%= comment.text %>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/parks">Back to parks</a>
        </div>
    </div>
</div>

